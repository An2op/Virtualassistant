<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:clickable="true"



    >
    <!--{"station":[{"station_id":"kattappana","pincode":"686687","district_id":"3",-->
    <!--"address":"Kattappana","phone":"04898745854","station_type":"2","password":""},-->
<LinearLayout
    android:background="@color/c5"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:weightSum="1"
    android:layout_height="40dp">
    <TextView

        android:background="@color/c4"
android:layout_weight="0.6"
        android:layout_height="match_parent"
        android:id="@+id/station_id"
        android:layout_width="match_parent"
android:gravity="center_vertical"

        android:text="12,EKM-Kollam"
        android:textColor="@color/white"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/delete"
android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-smallcaps"
  />

</RelativeLayout>







    <TextView
        android:visibility="visible"
        android:gravity="center_vertical"
android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/station_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        android:text="Type:Bus  Date:12/12/2018"
        android:layout_below="@+id/place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:visibility="visible"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        android:text="Details:Very Urgent"
        android:layout_below="@+id/place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

<LinearLayout
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_weight="0.5"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        android:text="Status:Requested"
        android:layout_below="@+id/place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_weight="0.5"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/rqdate"
        android:ems="22"
        android:ellipsize="start"
        android:layout_gravity="right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="#343434"
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        android:text="Req.date:15/12/2018"
        android:layout_below="@+id/place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</LinearLayout>


</LinearLayout>
    <!-- Rightend Arrow -->



</android.support.v7.widget.CardView>