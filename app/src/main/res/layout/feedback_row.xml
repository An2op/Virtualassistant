<LinearLayout
    android:background="@color/c5"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

<TextView
    android:drawableLeft="@drawable/ic_sent_24dp"
    android:id="@+id/feedback"
    android:text="Nice trip to kochi to kollam"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/insertdate"
        android:text="18/12/2018"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:drawableLeft="@drawable/ic_received_24dp"
        android:id="@+id/reply"
        android:layout_gravity="right"
        android:text="Reply:expect on next trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:id="@+id/replydate"
        android:layout_gravity="right"
        android:text="18/12/2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <!-- Rightend Arrow -->



</android.support.v7.widget.CardView>