<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:clickable="true"



    >
    <!--{"station":[{"station_id":"kattappana","pincode":"686687","district_id":"3",-->
    <!--"address":"Kattappana","phone":"04898745854","station_type":"2","password":""},-->
<LinearLayout
    android:background="@color/c5"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:weightSum="1"
    android:background="@color/c4"
    android:layout_height="40dp">
    <TextView
        android:scrollbars = "vertical"

android:maxLines="3"
        android:layout_weight="0.9"
        android:layout_height="match_parent"
        android:id="@+id/station_id"
        android:layout_width="0dp"
android:gravity="center_vertical"
android:drawableLeft="@drawable/ic_event_note_black_24dp"
        android:text="24/12/2018"
        android:textColor="@color/white"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <Button
        android:layout_weight="0.1"
        android:id="@+id/delete"
android:background="@drawable/ic_clear_black_24dp"
        android:layout_width="0dp"
        android:layout_height="30dp"

        android:fontFamily="sans-serif-smallcaps"
  />

</LinearLayout>







    <TextView
        android:visibility="visible"
        android:gravity="center_vertical"
android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:id="@+id/station_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:text="station_type:"
        android:layout_below="@+id/place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</LinearLayout>
    <!-- Rightend Arrow -->



</android.support.v7.widget.CardView>